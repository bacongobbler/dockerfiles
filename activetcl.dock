from        ubuntu:12.04
maintainer  Matthew Fisher <me@bacongobbler.com>

run         apt-get install -qy wget tk

run         wget http://downloads.activestate.com/ActiveTcl/releases/8.5.14.0/ActiveTcl8.5.14.0.296777-linux-x86_64-threaded.tar.gz
run         tar xzvf ActiveTcl8.5.14.0.296777-linux-x86_64-threaded.tar.gz && rm ActiveTcl8.5.14.0.296777-linux-x86_64-threaded.tar.gz
run         bash ActiveTcl8.5.14.0.296777-linux-x86_64-threaded/install.sh --directory /opt/activetcl
run         rm -rf ActiveTcl8.5.14.0.296777-linux-x86_64-threaded

env         PATH    /opt/activetcl/bin:$PATH
