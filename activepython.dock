from        ubuntu:12.04
maintainer  Matthew Fisher <me@bacongobbler.com>

ENV     VERSION 2.7.5.6

run     apt-get install -y wget
run     wget http://downloads.activestate.com/ActivePython/releases/$VERSION/ActivePython-$VERSION-linux-x86_64.tar.gz
run     tar xzvf ActivePython-$VERSION-linux-x86_64.tar.gz
run     bash ./ActivePython-$VERSION-linux-x86_64/install.sh -I /opt/activepython-$VERSION

ENV     PATH    /opt/activepython-$VERSION/bin:$PATH
